enum ConsultationHistoryStatus {
    open
    closed
}

/// 
/// ConsultationHistory
/// 
model ConsultationHistory {
    id           Int                       @id @default(autoincrement())
    diagnosis    String
    prescription String
    status       ConsultationHistoryStatus

    // Schedule
    schedule   Schedule @relation(fields: [scheduleId], references: [id])
    scheduleId Int      @unique

    // Anamnesis
    anamnesis Anamnesis?

    // Examination
    examinations Examination[]

    // InfermaryAdmission
    infermaryAdmission InfermaryAdmission?

    // Audit fields
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    isActive  Boolean  @default(true)
}

///
/// Anamnesis
///
model Anamnesis {
    id                    Int    @id @default(autoincrement())
    cid                   String
    currentDiseaseDetails String
    personalAntecedents   String
    familyAntecedents     String
    lifeHabits            String
    medicationsInUse      String
    allergies             String
    previousSurgeries     String
    observations          String

    // ConsultationHistory
    ConsultationHistory   ConsultationHistory @relation(fields: [consultationHistoryId], references: [id])
    consultationHistoryId Int                 @unique

    // Audit fields
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    isActive  Boolean  @default(true)
}

/// 
/// Examination
/// 
model Examination {
    id     Int      @id @default(autoincrement())
    name   String
    date   DateTime
    result String

    // ConsultationHistory
    ConsultationHistory   ConsultationHistory @relation(fields: [consultationHistoryId], references: [id])
    consultationHistoryId Int                 @unique

    // Audit fields
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    isActive  Boolean  @default(true)
}
